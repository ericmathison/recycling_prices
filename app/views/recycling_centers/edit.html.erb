<h1>Enter a New Recycling Center</h1>
<%= form_tag do %>

  <p>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </p>

  <p>
    <%= label_tag :street %>
    <%= text_field_tag :street %>
  </p>

  <p>
    <%= label_tag :city %>
    <%= text_field_tag :city %>
  </p>

  <p>
    <%= label_tag :state %>
    <%= select_tag :state,
      options_for_select(us_states), prompt: '-- Select a State --' %>
  </p>

  <p>
    <%= label_tag :zip %>
    <%= text_field_tag :zip %>
  </p>

  <p>
    <%= label_tag :telephone %>
    <%= text_field_tag :telephone %>
  </p>

  <p>
    <%= label_tag :hours %>
    <%= text_field_tag :hours %>
  </p>

  <p>
    <%= label_tag :aluminum_price, "Aluminum Price" %>
    <%= text_field_tag :aluminum_price %>
  </p>

  <p>
    <%= label_tag :paper_price, "Paper Price" %>
    <%= text_field_tag :paper_price %>
  </p>

  <p>
    <%= label_tag :plastic_price, "Plastic Price" %>
    <%= text_field_tag :plastic_price %>
  </p>

  <p>
    <%= label_tag :glass_price, "Glass Price" %>
    <%= text_field_tag :glass_price %>
  </p>

  <p>
    <%= submit_tag 'Save' %>
  </p>
<% end %>
